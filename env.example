# Database
DATABASE_URL="postgresql://user:password@localhost:5432/archinara"
SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/archinara_shadow"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-min-32-chars"

# Dashboard Token (untuk API testing)
DASHBOARD_TOKEN="dev-token"

# Email (Nodemailer)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@archinara.com"

# ========================================
# CLOUD STORAGE (Pilih salah satu)
# ========================================

# Option 1: Supabase Storage (Recommended)
# NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
# SUPABASE_SERVICE_KEY="your-service-key-here"

# Option 2: Cloudflare R2
# R2_ACCOUNT_ID="your-account-id"
# R2_ACCESS_KEY_ID="your-access-key"
# R2_SECRET_ACCESS_KEY="your-secret-key"
# R2_BUCKET_NAME="avatars"
# R2_PUBLIC_URL="https://your-bucket.r2.dev"

# Option 3: AWS S3
# AWS_REGION="us-east-1"
# AWS_ACCESS_KEY_ID="your-access-key"
# AWS_SECRET_ACCESS_KEY="your-secret-key"
# AWS_S3_BUCKET="archinara-avatars"
# AWS_S3_PUBLIC_URL="https://your-bucket.s3.amazonaws.com"

